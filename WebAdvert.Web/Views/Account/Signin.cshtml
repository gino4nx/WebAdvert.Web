
@{
    ViewData["Title"] = "Sign In";
}
@model WebAdvert.Web.Models.Accounts.SigninModel;

<div class="row">
    <div class="col-md-4">
        <h4> Login using your email address and password</h4>
        <h5>
            <a asp-controller="Account" asp-action="SignUp">
                If you are not a member you can sign up here
            </a>
        </h5>
        <form method="post" asp-controller="Account" asp-action="SignIn">
            <h4>Create account</h4>
            <hr/>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" class="form-check" type="checkbox" />
                </div>
            </div>
            <button type="submit" class="btn btn-success">Sign in</button>
        </form>
    </div>
</div>
